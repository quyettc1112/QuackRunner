<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_duck1"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:padding="20dp"
            android:src="@drawable/ic_duck_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>

        <EditText
            android:id="@+id/edt_bet_duck1"
            android:background="@drawable/background_coin"
            android:layout_gravity="bottom"
            android:inputType="number"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

        </EditText>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:id="@+id/cardView_duck2"
        android:layout_margin="20dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:padding="20dp"
            android:src="@drawable/ic_duck_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>

        <EditText
            android:inputType="number"
            android:paddingStart="20dp"
            android:id="@+id/edt_bet_duck2"
            android:background="@drawable/background_coin"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp">

        </EditText>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:id="@+id/cardView_duck3"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_duck1">
        <ImageView
            android:padding="20dp"
            android:src="@drawable/ic_duck_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
        <EditText
            android:inputType="number"
            android:paddingStart="20dp"
            android:id="@+id/edt_bet_duck3"
            android:background="@drawable/background_coin"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp">

        </EditText>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_duck4"
        app:cardCornerRadius="20dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_duck2">
        <ImageView
            android:padding="20dp"
            android:src="@drawable/ic_duck_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
        <EditText
            android:inputType="number"
            android:paddingStart="20dp"
            android:id="@+id/edt_bet_duck4"
            android:background="@drawable/background_coin"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp">

        </EditText>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_play"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="PLAY"
        android:background="@drawable/background_button_bet"
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>